@inherits LayoutComponentBase

<HeadContent>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="css/app.css" rel="stylesheet" />
</HeadContent>

<div class="page">
    <NavMenu />
    <main class="w-100">
        <div class="top-row-ml">
            <div class="title-container">
                <h1 class="app-title">Система управления складом</h1>
            </div>
        </div>
        <article class="content px-4 py-5">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    Произошла непредвиденная ошибка.
    <a href="." class="reload btn btn-sm btn-danger ms-2">Перезагрузить</a>
    <span class="dismiss btn-close float-end me-3"></span>
</div>